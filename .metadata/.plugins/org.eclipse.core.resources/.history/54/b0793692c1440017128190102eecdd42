import javax.swing.*;
import java.awt.Font;

public class MainMenu extends JPanel {
	private Font titleFont;
	private Font subFont;
	private Font authorFont;
	private JLabel title;
	private JLabel subtitle;
	private JLabel authors;
	private int buttonW;
	private int buttonH;
	private int spacing;
	private JButton playButton;
	private JButton instructionButton;
	private JButton quitButton;
	
	public MainMenu(){
		GameScreen g = new GameScreen();
		setLayout(null);
		titleFont = new Font("Bebas Neue Regular", Font.BOLD, 100);
		subFont = new Font("Bebas Neue Regular", Font.PLAIN, 28);
		authorFont = new Font("Bebas Neue Regular", Font.PLAIN, 22);
		
		title = new JLabel("S.T.A.B");
		title.setFont(titleFont);
		title.setLocation(g.getWidth() / 2 -185 , 150);
		System.out.println(g.getWidth());
		subtitle = new JLabel("Sharp Tips Action Battle");
		subtitle.setFont(subFont);
		subtitle.setLocation(g.getWidth() / 2 -140, 180);
		authors = new JLabel("J. Bao, T. Chopra, R. Miller, K. Wang");
		authors.setFont(authorFont);
		authors.setLocation(g.getWidth() / 2 -180, 200);
		
		buttonW = 220;
		buttonH = 60;
		spacing = 90;
		
		
		playButton = new JButton("Play");
		playButton.setBounds(g.getWidth() / 2 - buttonW / 2 , 220, buttonW, buttonH);
		
		instructionButton = new JButton("Instructions");
		instructionButton.setBounds(g.getWidth() / 2 - buttonW / 2 ,
				playButton.getY() + spacing, buttonW, buttonH);
		
		quitButton = new JButton("Quit");
		quitButton.setBounds(g.getWidth() / 2 - buttonW / 2,
				instructionButton.getY() + spacing, buttonW, buttonH);
		
		add(title);
		add(subtitle);
		add(authors);
		add(playButton);
		add(instructionButton);
		add(quitButton);
		
	}
	
}
