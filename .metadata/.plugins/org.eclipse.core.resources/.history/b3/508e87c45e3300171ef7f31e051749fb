import java.awt.Color;
import java.awt.Graphics;

public class Player {
	private int x, y, width, height;
	private Color color;
	public Player(int x, int y, int width, int height, Color color){
		this.x = x;
		this.y = y;
		this.width = width;
		this.height = height;
		this.color = color;
	}
	public void paint(Graphics g){ 
		 g.fillRect (x, y, width, height);
		 g.setColor(color);
	}
}
